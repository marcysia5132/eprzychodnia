<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistWizytPacSzczegoly">

    <TextView
        android:id="@+id/HistWizytPacSzczegoly_nazwaPacjenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:textColor="#2BBC30"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/HistWizytPacSzczegoly_IdPacjenta"
        android:layout_width="194dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="96dp"
        android:textColor="#CE14BC"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/HistWizytPacSzczegoly_SzczegolyWizyty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="128dp"
        android:textColor="#1BDAE4"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="259dp"
        android:layout_height="38dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="208dp"
        android:gravity="center"
        android:text="Chcesz odwołać wizytę?"
        android:textColor="#4F1FA4"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cancelAppointmentButton"
        android:layout_width="287dp"
        android:layout_height="84dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="263dp"
        android:text="Odwołaj Wizytę"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>